<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atrax.Pages.DeliveryStop"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            
            <HorizontalStackLayout Spacing="10">
                <ImageButton Source="back.png"
                             WidthRequest="25"
                             HeightRequest="25"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"/>
                <Label Text="Load status"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            
            <Label Text="Company:" FontSize="14" />
            <Entry Placeholder="Enter company name"
                   BackgroundColor="#F2F2F2"
                   HeightRequest="40"
                   />

            
            <Label Text="Status:" FontSize="14" />

            <VerticalStackLayout Spacing="10">
                
                <HorizontalStackLayout Spacing="10">
                    <CheckBox x:Name="AcceptedCheckbox"
                  Color="Gray"
                  WidthRequest="20"
                  HeightRequest="20" />
                    <Label Text="Load accepted"
               FontSize="14"
               VerticalOptions="Center" />
                </HorizontalStackLayout>

                
                <HorizontalStackLayout Spacing="10">
                    <CheckBox x:Name="RejectedCheckbox"
                  Color="Gray"
                  WidthRequest="20"
                  HeightRequest="20" />
                    <Label Text="Rejected product"
               FontSize="14"
               VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>


            
            <Label Text="Comment:" FontSize="14" />
            <Editor Placeholder="Enter comment"
                    BackgroundColor="#F2F2F2"
                    HeightRequest="100"
                     />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="20"
                       Margin="0,30,0,0"
                       HorizontalOptions="Center">
                <Button Text="Cancel"
            BackgroundColor="Gray"
            TextColor="White"
            CornerRadius="25"
            WidthRequest="120"
            HeightRequest="45"
            FontSize="16" />

                <Button Text="Send"
            BackgroundColor="Gray"
            TextColor="White"
            CornerRadius="25"
            WidthRequest="120"
            HeightRequest="45"
            FontSize="16" />

                <Button Text="Signature"
            BackgroundColor="Gray"
            TextColor="White"
            CornerRadius="25"
            WidthRequest="120"
            HeightRequest="45"
            FontSize="16"
            Clicked="OnSignatureClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
