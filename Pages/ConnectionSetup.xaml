<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackingApp1.Pages.ConnectionSetup"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid x:Name="RootGrid">

      
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Start">

            <Label Text="Atrax"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Image Source="logo.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Aspect="AspectFill"
                   Margin="0,20,0,0" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,30,0,0">
                <Button Text="Next"
                        BackgroundColor="Black"
                        TextColor="White"
                        WidthRequest="120"
                        CornerRadius="20"
                        Clicked="OnShowPopupClicked" />

                <Button Text="Setup connection"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        WidthRequest="150"
                        CornerRadius="20"
                        
                        Clicked="OnSetupConnectionClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

        
        <Grid x:Name="PopupOverlay"
              
              IsVisible="False">

            <Frame CornerRadius="10"
                   BackgroundColor="White"
                   Padding="30"
                   WidthRequest="360"
                   HeightRequest="260"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text=" Atrax Would Like to Send You Notifications."
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center"/>

                    <Label Text="Notifications may include alerts, sounds amd icon badges. These can be configured in Settings."
                           FontSize="14"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           WidthRequest="300"/>
                    
                    
                    <HorizontalStackLayout Spacing="25" HorizontalOptions="Center"
                                           WidthRequest="350" Margin="0,10,0,0">
                        <Button Text="Don't allow"
                            BackgroundColor="gray"
                            TextColor="White"
                            WidthRequest="135"
                                HeightRequest="45"
                            CornerRadius="22"
                                Padding="0"
                                FontSize="14"
                            Clicked="OnHidePopupClicked" />

                    <Button Text="Allow"
        BackgroundColor="Black"
        TextColor="White"
        WidthRequest="135"
        HeightRequest="45"
        CornerRadius="22"
                            FontSize="14"
                            Padding="0"
        Clicked="OnHidePopupClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>
